<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.textbooksale.app">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TextbookSaleApp">

        <!-- ✅ Main launcher activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"> <!-- REQUIRED for Android 12+ -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- ✅ Additional app screens -->
        <activity android:name=".view.ListingActivity"/>
        <activity android:name=".view.BrowseActivity"/>

    </application>

</manifest>
